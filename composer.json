{
    "name": "exan/dhp",
    "description": "Library to interact with the Discord api/gateway",
    "type": "library",
    "license": "GPL-3.0",
    "require": {
        "exan/dhp-core": "^0.3",
        "exan/event_emitter": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "DHP\\": "src"
        }
    },
    "require-dev": {
        "consistence/coding-standard": "^3.10"
    },
    "scripts": {
        "lint": "vendor/bin/phpcbf --standard=ruleset.xml --extensions=php --encoding=utf-8 -sp src; vendor/bin/phpcs --standard=ruleset.xml --extensions=php --encoding=utf-8 -sp src"
    }
}
